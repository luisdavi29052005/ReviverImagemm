{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/(.*)", "dest": "/dist/$1" },
    { "src": "/", "dest": "/dist/index.html" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://www.reviverimagem.shop/api/$1" }
  ]
}
